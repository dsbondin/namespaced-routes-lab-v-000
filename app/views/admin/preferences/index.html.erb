<h1>Preferences</h1>

<%= form_for @pref, url: admin_preference_path(@pref) do |f| %>
  <p>
    <%= f.label :artist_sort_order %>
    <%= f.text_field :artist_sort_order %>
  </p>

  <p>
    <%= f.label :song_sort_order %>
    <%= f.text_field :song_sort_order %>
  </p>

  <p>
    <%= f.label :allow_create_artists %>
    <%= f.text_field :allow_create_artists %>
  </p>

  <p>
    <%= f.label :allow_create_songs %>
    <%= f.text_field :allow_create_songs %>
  </p>

  <%= f.submit %>

<% end %>
